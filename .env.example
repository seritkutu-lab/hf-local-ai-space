# ============================================================
# HF Space Local AI - Environment Configuration
# Copy ke .env dan isi dengan value yang sesuai
# ============================================================

# ============================================================
# Server Configuration
# ============================================================
HOST=0.0.0.0
PORT=7860
DEBUG=False
LOG_LEVEL=INFO

# ============================================================
# ngrok Configuration
# ============================================================
# Get token dari: https://dashboard.ngrok.com/auth/your-authtoken
NGROK_ENABLED=True
NGROK_AUTH_TOKEN=your_ngrok_token_here
NGROK_PUBLIC_URL=

# ============================================================
# LLM Configuration
# ============================================================
# Backend options: ollama, gpt4all, llama_cpp, huggingface
LLM_BACKEND=ollama

# Ollama Settings (jika LLM_BACKEND=ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# LLM Parameters
LLM_MAX_TOKENS=100
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.95
LLM_TOP_K=50

# ============================================================
# MetaGPT Integration
# ============================================================
METAGPT_API_BASE=
METAGPT_API_KEY=
METAGPT_MODEL=local

# ============================================================
# Security
# ============================================================
API_KEY_REQUIRED=False
API_KEY=your_api_key_here
CORS_ORIGINS=*

# ============================================================
# Database (Optional)
# ============================================================
DATABASE_URL=sqlite:///./local_ai.db
ENABLE_PERSISTENCE=False
